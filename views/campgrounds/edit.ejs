<% include ../partials/header%>
    <div class="container">
        <h1 style="text-align: center">Edit <%=campground.name%></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  value="<%=campground.image%>" name="campground[image]"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]"></input>
                </div>
                
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="Submit"></input>
                </div>
            </form>
            <a href="/campgrounds">GO back!</a>
        </div>
    </div>
<% include ../partials/footer%>